<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="http://localhost:5000/css/dashboard.css">
    <title>Dashboard</title>
</head>
<body>

    <!-- <h2 style="color: #EE6E73;" class = "heading center-align red-text lighten-2">Welcome to your dashboard</h2> -->
    <div style="width: 100%;" class="row">
      <div class="col s12 m12">
        <ul id = "tabsBar"  class="tabs tabs-fixed-width tab-demo z-depth-1 hide-on-med-and-down">
          <li  class="tab col s3 blue-text"><a id = "recFoodsTab"  href="?category=recfoods" class = "active">Featured Foods</a></li>
          <li class="tab col s3"><a id = "fastFoodsTab"  href="?category=fastfoods">Fast Foods</a></li>
          <li class="tab col s3"><a id = "meatCornerTab" href="?category=meatcorner">Meat Corner</a></li>
          <li class="tab col s3"><a id = "lowFatTab" href="?category=lowfat">Low-Fat</a></li>
        </ul>
      </div>
    </div>

    <!--Side Nav for mobile view-->
    <ul class="sidenav" id = "mobile-nav">
      <li><a style="color:#EE6E73" href="?category=recfoods">Featured</a></li>
      <li><a style="color:#EE6E73" href="?category=fastfoods">Fast Foods</a></li>
      <li><a style="color:#EE6E73" href="?category=meatcorner">Meat Corner</a></li>
      <li><a style="color:#EE6E73" href="?category=lowfat">Low Fat</a></li>
    </ul>

    <!--Featured foods-->
<section id="works" class="section section-cardinfo scrollspy">
    <div class="foodsection">
        <h3 class = "heading left-align  grey-text text-darken-3" style="margin-left: 10px;">Recommended foods</h3>
      <% foods.forEach(function(food) {%>
        <div class="row">
        <div class="col s6 m3">
          <div class="card z-depth-1 hoverable">
            <div class="card-image">
                <img class = "card-photo" src="<%= food.photoLink %> " height = 220  alt="<%= food.name %>">
            </div>
            <div class="card-action">
              <a href="#" class = "waves-effect black-text text-darken-2"><%= food.name %> </a>
            </div>
          </div>
        </div>
      <% }); %> 
      </div>
    </div>
  </section>


<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script src="http://localhost:5000/js/dashboard.js"></script>
</body>
</html>